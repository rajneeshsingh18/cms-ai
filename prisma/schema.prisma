datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Defined in .env
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  content   String
  imageUrl  String?
  tags      String[]
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Optional: Add relations later (e.g., author, categories)
}
